---
interface Props {
	size?: number;
	class?: string;
}

const { size = 24, class: className } = Astro.props;
---

<svg
	width={size}
	height={size}
	viewBox="0 0 24 24"
	fill="none"
	xmlns="http://www.w3.org/2000/svg"
	class={className}
	aria-hidden="true"
>
	<!-- Mid-century geometric boot - clean lines, organic curves -->
	<path
		d="M7 4C7 3.44772 7.44772 3 8 3H12C12.5523 3 13 3.44772 13 4V10H17C18.6569 10 20 11.3431 20 13V18C20 19.1046 19.1046 20 18 20H6C4.89543 20 4 19.1046 4 18V13C4 11.3431 5.34315 10 7 10V4Z"
		fill="currentColor"
	/>
	<!-- Boot heel accent -->
	<rect
		x="4"
		y="17"
		width="4"
		height="3"
		rx="0.5"
		fill="var(--burnt-sienna)"
	/>
	<!-- Boot top detail line -->
	<path
		d="M8 6H12"
		stroke="var(--warm-cream)"
		stroke-width="1.5"
		stroke-linecap="round"
	/>
</svg>
